<Window x:Class="Practice.Panel.Admin.Remove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice.Panel.Admin"
        mc:Ignorable="d"
        Title="Удаление пользователя" Height="1000" Width="1400">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="133" VerticalAlignment="Top" Width="391" Background="#FFB70000"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="875" VerticalAlignment="Top" Width="391" Background="#33343D" Margin="0,133,0,0"/>
        <Label x:Name="GWAN" Content="GWAN-Admin" HorizontalAlignment="Left" Height="65" Margin="32,34,0,0" VerticalAlignment="Top" Width="327" FontSize="48" Foreground="Black" FontFamily="Georgia"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="48" Margin="-1,253,0,0" VerticalAlignment="Top" Width="392" Background="#FFB70000"/>

        <Button Content="Зарегистрировать пользователя" HorizontalAlignment="Left" Margin="6,167,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Registration"/>
        <Button Content="Изменить данные пользователя" HorizontalAlignment="Left" Margin="6,213,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Edit"/>
        <Button Content="Удалить пользователя" HorizontalAlignment="Left" Margin="6,259,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Removee"/>

        <Button Content="Список клиентов" HorizontalAlignment="Left" Margin="6,330,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Clients"/>
        <Button Content="Список сотрудников" HorizontalAlignment="Left" Margin="6,377,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Employees"/>

        <Button Content="История заказов" HorizontalAlignment="Left" Margin="6,444,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Orders"/>
        <Button Content="История поставок" HorizontalAlignment="Left" Margin="6,491,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Supplies"/>

        <Image HorizontalAlignment="Left" Height="56" Margin="174,941,0,0" VerticalAlignment="Top" Width="56" Source="/materials/2/3/Logout.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Exit"/>

        <Label Content="Введите данные: " HorizontalAlignment="Left" Height="70" Margin="506,291,0,0" VerticalAlignment="Top" Width="336" FontSize="40"/>

        <!-- Поменяли местами: сначала Фамилия -->
        <Label Content="Фамилия: " HorizontalAlignment="Left" Height="70" Margin="506,427,0,0" VerticalAlignment="Top" Width="336" FontSize="40"/>
        <Label Content="UserID: " HorizontalAlignment="Left" Height="70" Margin="506,361,0,0" VerticalAlignment="Top" Width="336" FontSize="40"/>

        <Button Content="Удалить" HorizontalAlignment="Left" Height="34" Margin="506,564,0,0" VerticalAlignment="Top" Width="251" Background="#FFB70000" Foreground="White" Cursor="Hand" FontSize="20" Click="DeleteButton_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Height="34" Margin="506,602,0,0" VerticalAlignment="Top" Width="251" Background="#FFB70000" Foreground="White" Cursor="Hand" FontSize="20" Click="CancelButton_Click"/>

        <!-- Поменяли местами: сначала TextBox для фамилии (неактивный) -->
        <TextBox x:Name="LastName" 
                 HorizontalAlignment="Left" 
                 Margin="916,445,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="424" 
                 Height="34"
                 IsEnabled="False"
                 Background="#F0F0F0"/>

        <TextBox x:Name="UserID" 
                 HorizontalAlignment="Left" 
                 Margin="916,379,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="424" 
                 Height="34"/>

        <!-- Кнопка "Найти" рядом с UserID -->
        <Button Content="Найти" 
                HorizontalAlignment="Left" 
                Height="34" 
                Margin="811,379,0,0" 
                VerticalAlignment="Top" 
                Width="100" 
                Background="#FFB70000" 
                Foreground="White" 
                Cursor="Hand" 
                FontSize="16"
                Click="FindUserButton_Click"/>

        <!-- Подсказки -->

        <TextBlock Text="Фамилия заполнится автоматически после поиска" 
                   HorizontalAlignment="Left" 
                   Margin="916,479,0,0" 
                   VerticalAlignment="Top" 
                   Foreground="Gray" 
                   FontSize="12"/>

        <TextBlock Text="Введите ID и нажмите 'Найти'" 
                   HorizontalAlignment="Left" 
                   Margin="916,413,0,0" 
                   VerticalAlignment="Top" 
                   Foreground="Gray" 
                   FontSize="12"/>

    </Grid>
</Window>