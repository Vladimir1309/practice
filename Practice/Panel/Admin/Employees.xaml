<Window x:Class="Practice.Panel.Admin.Employees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice.Panel.Admin"
        mc:Ignorable="d"
        Title="Employees">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="133" VerticalAlignment="Top" Width="391" Background="#FFB70000"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="875" VerticalAlignment="Top" Width="391" Background="#33343D" Margin="0,133,0,0"/>
        <Label x:Name="GWAN" Content="GWAN-Admin" HorizontalAlignment="Left" Height="65" Margin="32,34,0,0" VerticalAlignment="Top" Width="327" FontSize="48" Foreground="Black" FontFamily="Georgia"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="48" Margin="-1,371,0,0" VerticalAlignment="Top" Width="392" Background="#FFB70000"/>

        <Button Content="Зарегистрировать пользователя" HorizontalAlignment="Left" Margin="6,167,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Registration"/>
        <Button Content="Изменить данные пользователя" HorizontalAlignment="Left" Margin="6,213,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Edit"/>
        <Button Content="Удалить пользователя" HorizontalAlignment="Left" Margin="6,259,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Remove"/>

        <Button Content="Список клиентов" HorizontalAlignment="Left" Margin="6,330,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Clients"/>
        <Button Content="Список сотрудников" HorizontalAlignment="Left" Margin="6,377,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Employee"/>

        <Button Content="История заказов" HorizontalAlignment="Left" Margin="6,444,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Orders"/>
        <Button Content="История поставок" HorizontalAlignment="Left" Margin="6,491,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Supplies"/>

        <Image HorizontalAlignment="Left" Height="56" Margin="174,941,0,0" VerticalAlignment="Top" Width="56" Source="/materials/2/3/Logout.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Exit"/>

        <DataGrid Margin="435,167,33,147" Name="UsersDataGrid" ItemsSource="{Binding Users}" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="IdUser" Binding="{Binding IdUser}" Width="50"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="60"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="60"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="100"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="100"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}" Width="100"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="100"/>
                <DataGridTextColumn Header="Почта" Binding="{Binding Email}" Width="130"/>
                <DataGridTextColumn Header="День рождения" Binding="{Binding Birthday}" Width="100"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
