<Window x:Class="Practice.Panel.Delivery.Reload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice.Panel.Delivery"
        mc:Ignorable="d"
        Title="Reload">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="133" VerticalAlignment="Top" Width="391" Background="#FFB70000"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="875" VerticalAlignment="Top" Width="391" Background="#33343D" Margin="0,133,0,0"/>
        <Label x:Name="GWAN" Content="GWAN-Sales" HorizontalAlignment="Left" Height="65" Margin="32,34,0,0" VerticalAlignment="Top" Width="327" FontSize="48" Foreground="Black" FontFamily="Georgia"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="48" Margin="-1,207,0,0" VerticalAlignment="Top" Width="392" Background="#FFB70000"/>

        <Button Content="Пробить товар" HorizontalAlignment="Left" Margin="6,167,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Hitt"/>
        <Button Content="Оформить возврат" HorizontalAlignment="Left" Margin="6,213,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="Back"/>
        <Button Content="История заказов" HorizontalAlignment="Left" Margin="6,259,0,0" VerticalAlignment="Top" Width="380" Height="36" Background="White" FontSize="20" Cursor="Hand" Click="History"/>

        <Image HorizontalAlignment="Left" Height="56" Margin="174,941,0,0" VerticalAlignment="Top" Width="56" Source="/materials/2/3/Logout.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Exit"/>

        <Label Content="Id товара:" HorizontalAlignment="Center" Height="60" Margin="0,277,0,0" VerticalAlignment="Top" Width="254" FontSize="36"/>
        <Label Content="Наименование:" HorizontalAlignment="Left" Height="60" Margin="593,337,0,0" VerticalAlignment="Top" Width="269" FontSize="36"/>
        <Label Content="Стоимость:" HorizontalAlignment="Center" Height="60" Margin="0,397,0,0" VerticalAlignment="Top" Width="254" FontSize="36"/>
        <TextBox x:Name="IdProductText" HorizontalAlignment="Left" Height="51" Margin="928,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="111" VerticalContentAlignment="Center"/>
        <Label x:Name="ProductNameLabel" 
               Content="-" 
               HorizontalAlignment="Left" 
               Height="60" 
               Margin="928,337,0,0" 
               VerticalAlignment="Top" 
               Width="400" 
               FontSize="36"
               Foreground="Gray"/>

        <Label x:Name="ProductPriceLabel" 
               Content="0 ₽" 
               HorizontalAlignment="Left" 
               Height="60" 
               Margin="928,397,0,0" 
               VerticalAlignment="Top" 
               Width="200" 
               FontSize="36"
               Foreground="Gray"/>

        <Label Content="Причина возврата (минимум 10 символов)" HorizontalAlignment="Left" Margin="602,477,0,0" VerticalAlignment="Top" Width="313" Height="27" Opacity="0.13"/>
        <TextBox x:Name="Amount" HorizontalAlignment="Left" Height="50" Margin="593,504,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="446" VerticalContentAlignment="Center"/>

        <Button Content="Оформить возврат" HorizontalAlignment="Left" Height="45" Margin="593,621,0,0" VerticalAlignment="Top" Width="446" Background="#FFB70000" Foreground="White" Cursor="Hand" FontSize="20" Click="GetBack"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Height="45" Margin="593,671,0,0" VerticalAlignment="Top" Width="446" Background="#FFB70000" Foreground="White" Cursor="Hand" FontSize="20" Click="Cancel"/>

        <TextBlock Text="Введите ID и нажмите 'Найти'" 
                   HorizontalAlignment="Left" 
                   Margin="928,270,0,0" 
                   VerticalAlignment="Top" 
                   Foreground="Gray" 
                   FontSize="12"/>

        <Button Content="Найти" 
                HorizontalAlignment="Left" 
                Height="34" 
                Margin="1055,294,0,0" 
                VerticalAlignment="Top" 
                Width="80" 
                Background="#FFB70000" 
                Foreground="White" 
                Cursor="Hand" 
                FontSize="14"
                Click="FindProductButton_Click"/>

    </Grid>
</Window>
