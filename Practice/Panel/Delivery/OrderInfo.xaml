        <Label Content="+0" HorizontalAlignment="Left" Margin="998,451,0,0" VerticalAlignment="Top" FontSize="48"/>

        <Button Content="Подтвердить выполнение" HorizontalAlignment="Left" Height="45" Margin="530,639,0,0" VerticalAlignment="Top" Width="446" Background="#FFB70000" Foreground="White" Cursor="Hand" FontSize="20"/>
