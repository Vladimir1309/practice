<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid Margin="0,-20,0,20">

        <TextBlock HorizontalAlignment="Left" Height="66" Margin="558,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="48"><Run Language="ru-ru" Text="Регистрация"/></TextBlock>

        <Image Height="100" Width="100" Margin="558,345,782,563" Source="/VK Circled.png"/>
        <Image Height="100" Width="100" Margin="738,345,602,563" Source="/Telegram.png"/>

        <TextBlock x:Name="Phone" HorizontalAlignment="Left" Height="34" Margin="524,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" FontSize="24" Foreground="#FFB70000" Cursor=""><Run Language="ru-ru" Text="Номер телефона" MouseLeftButtonDown="MLBD_Phone" Cursor="Hand" MouseEnter="Phone_MouseEnter" MouseLeave="Phone_MouseLeave"/></TextBlock>
        <TextBlock x:Name="E_mail" HorizontalAlignment="Left" Height="34" Margin="720,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" FontSize="24" Text="E-mail" MouseLeftButtonDown="MLBD_Email" Cursor="Hand" MouseEnter="E_mail_MouseEnter" MouseLeave="E_mail_MouseLeave" Opacity="0.13"/>

        <TextBox HorizontalAlignment="Left" Height="37" Margin="524,533,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" VerticalContentAlignment="Center"/>
        <Label x:Name="E_P_Label" Content="Номер телефона" HorizontalAlignment="Left" Margin="531,508,0,0" VerticalAlignment="Top" Width="313" Height="33" Opacity="0.13"/>
        <TextBox HorizontalAlignment="Left" Height="37" Margin="525,595,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="346" VerticalContentAlignment="Center"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="533,570,0,0" VerticalAlignment="Top" Width="310" Height="34" Opacity="0.13"/>
        <TextBox HorizontalAlignment="Left" Height="37" Margin="524,658,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" VerticalContentAlignment="Center"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="531,632,0,0" VerticalAlignment="Top" Width="312" Height="33" Opacity="0.13"/>

        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Height="34" Margin="525,725,0,0" VerticalAlignment="Top" Width="346" Background="#FFB70000" Foreground="White" Cursor="Hand"/>
        <Label x:Name="AlreadyAccount" Content="Уже есть аккаунт?" HorizontalAlignment="Left" Height="29" Margin="643,764,0,0" VerticalAlignment="Top" Width="109" Opacity="0.13" Cursor="Hand" MouseEnter ="AlreadyAccount_MouseEnter" MouseLeave ="AlreadyAccount_MouseLeave"/>
        <Label Content="* Регистрируясь на нашем сервисе, вы&#xD;&#xA;подтверждаете своё согласие на обработку&#xD;&#xA;персональных данных" HorizontalAlignment="Left" Height="61" Margin="524,798,0,0" VerticalAlignment="Top" Width="268" Opacity="0.13"/>


    </Grid>
</Window>
