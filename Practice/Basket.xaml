<Window x:Class="Practice.Basket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="Basket">
    <Grid>
        <Label x:Name="GWAN" Content="GWAN" HorizontalAlignment="Left" Height="70" Margin="100,91,0,0" VerticalAlignment="Top" Width="323" FontSize="48" Foreground="#FFB70000" MouseLeftButtonDown="MLBD_GWAN" Cursor="Hand"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="783,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Favorite.png"/>
        <Label Content="Избранное" HorizontalAlignment="Left" Height="44" Margin="832,93,0,0" VerticalAlignment="Top" Width="136" FontSize="24" Foreground="Black"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1058,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Shopping BasketR.png"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1058,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Shopping Basket.png"/>
        <Label Content="Корзина" HorizontalAlignment="Left" Height="44" Margin="1103,93,0,0" VerticalAlignment="Top" Width="136" FontSize="24" Foreground="#FFB70000"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1302,91,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Collaborator Male-1.png"/>

        <Label Content="Корзина" HorizontalAlignment="Left" Margin="100,258,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
        <Label Content="Заказ" HorizontalAlignment="Left" Margin="980,258,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="286" Margin="980,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378"/>
        <Label Content="Итого:" HorizontalAlignment="Left" Height="52" Margin="1030,378,0,0" VerticalAlignment="Top" Width="102" FontSize="32"/>
        <Label x:Name="total" Content="0 ₽" HorizontalAlignment="Left" Height="52" Margin="1194,378,0,0" VerticalAlignment="Top" Width="102" FontSize="32"/>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="980,477,0,0" VerticalAlignment="Top" Width="378" BorderBrush="#FFABADB3"/>
        <Button Content="Оплатить заказ" HorizontalAlignment="Left" Height="31" Margin="1028,530,0,0" VerticalAlignment="Top" Width="282" BorderBrush="White" Background="#FFB70000" Foreground="White"/>
        <Label Content="Заказ" HorizontalAlignment="Left" Margin="980,632,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>

        <TextBox HorizontalAlignment="Left" Height="100" Margin="980,701,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378"/>
        <Button Content="Магазин" HorizontalAlignment="Left" Height="30" Margin="1028,736,0,0" VerticalAlignment="Top" Width="141" BorderBrush="White" Background="#FFB70000" Foreground="White" Click="Button_Click"/>
        <Button Content="Курьер" HorizontalAlignment="Left" Height="30" Margin="1169,736,0,0" VerticalAlignment="Top" Width="141" BorderBrush="White" Background="DarkGray" Foreground="White" Click="Button_Click"/>
        
        <Label Content="Выбрать место" HorizontalAlignment="Left" Margin="980,822,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
    </Grid>
</Window>
