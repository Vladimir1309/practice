<Window x:Class="Practice.Basket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="Basket">
    <Grid>
        <Label x:Name="GWAN" Content="GWAN" HorizontalAlignment="Left" Height="70" Margin="100,91,0,0" VerticalAlignment="Top" Width="323" FontSize="48" Foreground="#FFB70000" FontFamily="Georgia" MouseLeftButtonDown="MLBD_GWAN" Cursor="Hand"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="783,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Favorite.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Favourite"/>
        <Label Content="Избранное" HorizontalAlignment="Left" Height="44" Margin="832,93,0,0" VerticalAlignment="Top" Width="136" FontSize="24" Cursor="Hand" MouseLeftButtonDown="MLBD_Favourite"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1058,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Shopping BasketR.png"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1058,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Shopping Basket.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Basket"/>
        <Label Content="Корзина" HorizontalAlignment="Left" Height="44" Margin="1103,93,0,0" VerticalAlignment="Top" Width="136" FontSize="24" Cursor="Hand" MouseLeftButtonDown="MLBD_Basket" Foreground="#FFB70000"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1302,91,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Collaborator Male-1.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Account"/>

        <Label Content="Корзина" HorizontalAlignment="Left" Margin="100,213,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
        <Label Content="Заказ" HorizontalAlignment="Left" Margin="980,213,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
        <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="287" Margin="980,282,0,0" VerticalAlignment="Top" Width="378"/>
        <Label Content="Итого:" HorizontalAlignment="Left" Height="52" Margin="1030,333,0,0" VerticalAlignment="Top" Width="102" FontSize="32"/>
        <Label x:Name="total" Content="0 ₽" HorizontalAlignment="Left" Height="52" Margin="1171,333,0,0" VerticalAlignment="Top" Width="153" FontSize="32"/>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="980,432,0,0" VerticalAlignment="Top" Width="378" BorderBrush="#FFABADB3"/>
        <Button Content="Оплатить заказ" HorizontalAlignment="Left" Height="31" Margin="1028,485,0,0" VerticalAlignment="Top" Width="282" BorderBrush="White" Background="#FFB70000" Foreground="White" Click="Pay_Click" Cursor="Hand"/>

        <Label Content="Способ получения" HorizontalAlignment="Left" Margin="980,588,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
        <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="980,657,0,0" VerticalAlignment="Top" Width="378"/>
        <Button x:Name="Store_Button" Content="Магазин" HorizontalAlignment="Left" Height="30" Margin="1028,692,0,0" VerticalAlignment="Top" Width="141" BorderBrush="White" Background="#FFB70000" Foreground="White"/>
        <Button x:Name="Delivery_Button" Content="Курьер" HorizontalAlignment="Left" Height="30" Margin="1169,692,0,0" VerticalAlignment="Top" Width="141" BorderBrush="White" Background="DarkGray" Foreground="White"/>

        <Label Content="Выбрать место" HorizontalAlignment="Left" Margin="980,778,0,0" VerticalAlignment="Top" Height="64" Width="426" FontSize="36" FontStyle="Italic" FontWeight="Bold"/>
        <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="980,844,0,0" VerticalAlignment="Top" Width="378"/>
        <Label Content="Адреса магазинов" HorizontalAlignment="Left" Margin="1099,878,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="1078,884,0,0" VerticalAlignment="Top" Width="20" Source="/Location.png"/>
        <CheckBox HorizontalAlignment="Left" Height="16" Margin="1014,874,0,0" VerticalAlignment="Top" Width="16">
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
            </CheckBox.RenderTransform>
        </CheckBox>
        


    </Grid>
</Window>
