<Window x:Class="Practice.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="Login" Height="1024" Width="1440">
    <Grid>
        <Label x:Name="GWAN" Content="GWAN" HorizontalAlignment="Left" Height="70" Margin="100,91,0,0" VerticalAlignment="Top" Width="323" FontSize="48" Foreground="#FFB70000" MouseLeftButtonDown="MLBD_GWAN" Cursor="Hand"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="783,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Favorite.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Favourite"/>
        <Label Content="Избранное" HorizontalAlignment="Left" Height="44" Margin="832,93,0,0" VerticalAlignment="Top" Width="136" FontSize="24" Cursor="Hand" MouseLeftButtonDown="MLBD_Favourite"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1058,92,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Shopping Basket.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Basket"/>
        <Label Content="Корзина" HorizontalAlignment="Left" Height="44" Margin="1103,93,0,0" VerticalAlignment="Top" Width="136" FontSize="24" Cursor="Hand" MouseLeftButtonDown="MLBD_Basket"/>
        <Image HorizontalAlignment="Left" Height="31" Margin="1309,98,0,0" VerticalAlignment="Top" Width="31" Source="/materials/Collaborator Male.png"/>
        <Image HorizontalAlignment="Left" Height="44" Margin="1302,91,0,0" VerticalAlignment="Top" Width="44" Source="/materials/Collaborator Male-1.png" Cursor="Hand" MouseLeftButtonDown="MLBD_Account"/>

        <TextBlock HorizontalAlignment="Left" Height="66" Margin="446,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="522" FontSize="48"><Run Language="ru-ru" Text="Вход в личный кабинет"/></TextBlock>

        <Image Height="100" Width="100" Margin="558,345,782,563" Source="/materials/VK Circled.png" MouseLeftButtonDown="MLBD_VK_TG" Cursor="Hand"/>
        <Image Height="100" Width="100" Margin="738,345,602,563" Source="/materials/Telegram.png" MouseLeftButtonDown="MLBD_VK_TG" Cursor="Hand"/>

        <TextBlock x:Name="Phone" HorizontalAlignment="Left" Height="34" Margin="524,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" FontSize="24" Foreground="#B70000" MouseLeftButtonDown="MLBD_Phone"><Run Language="ru-ru" Text="Номер телефона" Cursor="Hand"/></TextBlock>
        <TextBlock x:Name="E_mail" HorizontalAlignment="Left" Height="34" Margin="720,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" FontSize="24" Text="E-mail" MouseLeftButtonDown="MLBD_Email" Cursor="Hand"/>

        <TextBox HorizontalAlignment="Left" Height="37" Margin="524,533,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" VerticalContentAlignment="Center"/>
        <Label x:Name="E_P_Label" Content="Номер телефона" HorizontalAlignment="Left" Margin="531,508,0,0" VerticalAlignment="Top" Width="313" Height="33" Opacity="0.13"/>
        <TextBox HorizontalAlignment="Left" Height="37" Margin="525,595,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="346" VerticalContentAlignment="Center"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="533,570,0,0" VerticalAlignment="Top" Width="310" Height="34" Opacity="0.13"/>

        <Button Content="Войти" HorizontalAlignment="Left" Height="34" Margin="524,669,0,0" VerticalAlignment="Top" Width="346" Background="#FFB70000" Foreground="White" Cursor="Hand"/>
        <Label x:Name="AlreadyAccount" Content="Нет аккаунта?" HorizontalAlignment="Left" Height="29" Margin="644,708,0,0" VerticalAlignment="Top" Width="108" Opacity="0.13" Cursor="Hand" MouseEnter ="AlreadyAccount_MouseEnter" MouseLeave ="AlreadyAccount_MouseLeave" MouseLeftButtonDown="MLBD_Already" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
